{
  "info": {
    "name": "ExamApp API",
    "_postman_id": "exam-app-collection-123",
    "description": "API collection for Exam Taking Interface (Student Side Only)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"student@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1.0/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1.0", "auth", "register"]
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1.0/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1.0", "auth", "login"]
        }
      }
    },
    {
      "name": "Exam - Start Exam",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1.0/exam/start",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1.0", "exam", "start"]
        }
      }
    },
    {
      "name": "Exam - Submit Exam",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"answers\": [\n    { \"questionId\": \"<Q1_ID>\", \"selectedOption\": \"Newton\" },\n    { \"questionId\": \"<Q2_ID>\", \"selectedOption\": \"Newton's Third Law\" }\n  ]\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1.0/exam/submit",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1.0", "exam", "submit"]
        }
      }
    },
    {
      "name": "Results - Get My Results",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1.0/results",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1.0", "results"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}
